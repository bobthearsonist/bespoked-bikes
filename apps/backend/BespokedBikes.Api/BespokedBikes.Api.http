POST {{BespokedBikes.Api_HostAddress}}/api/products
Content-Type: application/json

{
  "productType": "Bike",
  "name": "Mountain Bike Pro",
  "description": "High-performance mountain bike",
  "supplier": "BikesCo",
  "costPrice": "500.00",
  "retailPrice": "899.99",
  "commissionPercentage": "15.00"
}

